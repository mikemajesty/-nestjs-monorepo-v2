{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/apps/user/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "src/apps/user/tsconfig.json"
  },
  "monorepo": true,
  "root": "src/apps/user",
  "projects": {
    "@app/user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "src/apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "src/apps/user/tsconfig.json"
      }
    },
    "@app/auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "src/apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "src/apps/auth/tsconfig.json"
      }
    },
    "@app/tools.eslint": {
      "type": "library",
      "root": "tools/eslint",
      "entryFile": "eslint.config.mjs",
      "sourceRoot": "src/tools/eslint"
    },
    "@app/infra": {
      "type": "library",
      "root": "infra",
      "entryFile": "index",
      "sourceRoot": "src/infra",
      "compilerOptions": {
        "tsConfigPath": "src/infra/tsconfig.json"
      }
    },
    "@app/libs": {
      "type": "library",
      "root": "libs",
      "entryFile": "index",
      "sourceRoot": "src/libs",
      "compilerOptions": {
        "tsConfigPath": "src/libs/tsconfig.json"
      }
    },
    "@app/utils": {
      "type": "library",
      "root": "utils",
      "entryFile": "index",
      "sourceRoot": "src/utils",
      "compilerOptions": {
        "tsConfigPath": "src/utils/tsconfig.json"
      }
    }
  }
}